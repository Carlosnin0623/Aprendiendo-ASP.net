@{
    ViewData["Title"] = "Home Page";
}

<!-- Acordeon-->

<!-- FORMULARIO DE CONTACTO -->
<div class="accordion mb-3" id="acordeonContacto">
    <!-- Cada acordeón necesita un ID único -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingContacto">
            <!-- Encabezado del acordeón -->
            <!-- Botón que abre/cierra el contenido -->
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseContacto" aria-expanded="true"
                    aria-controls="collapseContacto">
                Formulario de Contacto
            </button>
        </h2>

        <!-- Contenedor colapsable (contenido del acordeón) -->
        <div id="collapseContacto" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <!-- Formulario dentro del acordeón -->
                <form>
                    <div class="mb-3">
                        <label for="nombreContacto" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombreContacto" placeholder="Ingresa tu nombre">
                    </div>
                    <div class="mb-3">
                        <label for="correoContacto" class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" id="correoContacto" placeholder="ejemplo@correo.com">
                    </div>
                    <div class="mb-3">
                        <label for="mensajeContacto" class="form-label">Mensaje</label>
                        <textarea class="form-control" id="mensajeContacto" rows="3"></textarea>
                    </div>
                    <!-- Botón de envío -->
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- FORMULARIO DE REGISTRO -->
<div class="accordion mb-3" id="acordeonRegistro">
    <!-- Nuevo acordeón con ID único -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingRegistro">
            <!-- Botón que abre/cierra el contenido -->
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseRegistro" aria-expanded="false"
                    aria-controls="collapseRegistro">
                Formulario de Registro
            </button>
        </h2>

        <!-- Contenedor colapsable (empieza cerrado) -->
        <div id="collapseRegistro" class="accordion-collapse collapse">
            <div class="accordion-body">
                <form>
                    <div class="mb-3">
                        <label for="usuarioRegistro" class="form-label">Usuario</label>
                        <input type="text" class="form-control" id="usuarioRegistro" placeholder="Elige un usuario">
                    </div>
                    <div class="mb-3">
                        <label for="emailRegistro" class="form-label">Correo</label>
                        <input type="email" class="form-control" id="emailRegistro" placeholder="ejemplo@correo.com">
                    </div>
                    <div class="mb-3">
                        <label for="passwordRegistro" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="passwordRegistro">
                    </div>
                    <button type="submit" class="btn btn-success">Registrarse</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- FORMULARIO DE LOGIN -->
<div class="accordion" id="acordeonLogin">
    <!-- Acordeón independiente -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingLogin">
            <!-- Botón que abre/cierra el contenido -->
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseLogin" aria-expanded="false"
                    aria-controls="collapseLogin">
                Formulario de Login
            </button>
        </h2>

        <!-- Contenedor colapsable -->
        <div id="collapseLogin" class="accordion-collapse collapse">
            <div class="accordion-body">
                <form>
                    <div class="mb-3">
                        <label for="usuarioLogin" class="form-label">Usuario</label>
                        <input type="text" class="form-control" id="usuarioLogin" placeholder="Ingresa tu usuario">
                    </div>
                    <div class="mb-3">
                        <label for="passwordLogin" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="passwordLogin">
                    </div>
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </form>
            </div>
        </div>
    </div>
</div>


