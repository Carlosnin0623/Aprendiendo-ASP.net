@{
    ViewData["Title"] = "Ventanas modales";
}


<!-- Botón para abrir el modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ejemploModal">
    Abrir Modal
</button>


<!-- Ventana modal -->
<div class="modal fade" id="ejemploModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- Encabezado del modal -->
            <div class="modal-header">
                <h5 class="modal-title">Titulo del modal</h5>
                <!-- Botón para cerrar el modal -->
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Cuerpo del modal -->
            <div class="modal-body">
                <p>Este es un pequeño formulario</p>

                <!-- Formulario dentro del modal -->
                <form>
                    <div class="mb-3">
                        <!-- Margen inferior de 1rem -->
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" />
                    </div>
                </form>
            </div>

            <!-- Pie del modal (footer) -->
            <div class="modal-footer">
                <!-- Botón para cerrar el modal -->
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>

                <!-- Botón para "guardar cambios" -->
                <!-- También tiene data-bs-dismiss para que se cierre después de dar clic -->
                <button class="btn btn-primary" data-bs-dismiss="modal">Salvar Cambios</button>
            </div>
        </div>
    </div>
</div>