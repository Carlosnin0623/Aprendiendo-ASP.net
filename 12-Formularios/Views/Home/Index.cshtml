@{
    ViewData["Title"] = "Formularios";
}

<h2>Formulario Normal</h2>

<form>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <textarea class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Color Favorito</label>
        <select class="form-select">
            <option selected disabled>-- Selecciona tu color favorito --</option>
            <option value="1">Azul</option>
            <option value="2">Rojo</option>
            <option value="3">Verde</option>
            <option value="4">Amarillo</option>
        </select>

        <div class="form-check">
           <input class="form-check-input" type="checkbox"/>
           <label class="form-label">Es empleado</label>
        </div>

        <div class="form-check"> <!-- Esta clase es importante para que funcione bien-->
            <!-- Si quieres que siempre aparezca marcado usa el atributo checked-->
            <input class="form-check-input" type="checkbox" checked />
            <label class="form-label">Es exempleado</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio"  name="miradio" />
            <label class="form-label">Opción 1</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" name="miradio" />
            <label class="form-label">Opción 2</label>
        </div>
    </div>

    <div class="form-floating mb-3">
        <input type="email" class="form-control" placeholder="Email"/>
        <label>Email</label>
    </div>

    <!-- disable sirve para desabilidar un campo-->

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" disabled />
    </div>

    <div class="mb-3">
        <label>Color de la camisa</label>
        <input type="color" class="form-control form-control-color" value="#563d7c"/>
    </div>

    <div>
        <button class="btn btn-primary">Enviar</button>
        <button class="btn btn-secondary">Cancelar</button>
    </div>
</form>


