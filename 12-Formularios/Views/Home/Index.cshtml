<!-- Inputs mas usados en bootraps-->

<h2>Inputs mas usados en bootstrap</h2>

<form>
    <!-- Texto -->
    <div class="mb-3">
        <label class="form-label">Texto</label>
        <input type="text" class="form-control" placeholder="Escribe texto aquí">
    </div>

    <!-- Email -->
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" placeholder="ejemplo@correo.com">
    </div>

    <!-- Password -->
    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input type="password" class="form-control" placeholder="********">
    </div>

    <!-- Número -->
    <div class="mb-3">
        <label class="form-label">Número</label>
        <input type="number" class="form-control" placeholder="1234">
    </div>

    <!-- Teléfono -->
    <div class="mb-3">
        <label class="form-label">Teléfono</label>
        <input type="tel" class="form-control" placeholder="+1 809 000 0000">
    </div>

    <!-- URL -->
    <div class="mb-3">
        <label class="form-label">Sitio Web</label>
        <input type="url" class="form-control" placeholder="https://ejemplo.com">
    </div>

    <!-- Fecha -->
    <div class="mb-3">
        <label class="form-label">Fecha</label>
        <input type="date" class="form-control">
    </div>

    <!-- Hora -->
    <div class="mb-3">
        <label class="form-label">Hora</label>
        <input type="time" class="form-control">
    </div>

    <!-- Fecha y hora -->
    <div class="mb-3">
        <label class="form-label">Fecha y Hora</label>
        <input type="datetime-local" class="form-control">
    </div>

    <!-- Semana -->
    <div class="mb-3">
        <label class="form-label">Semana</label>
        <input type="week" class="form-control">
    </div>

    <!-- Mes -->
    <div class="mb-3">
        <label class="form-label">Mes</label>
        <input type="month" class="form-control">
    </div>

    <!-- Archivo -->
    <div class="mb-3">
        <label class="form-label">Subir Archivo</label>
        <input type="file" class="form-control">
    </div>

    <!-- Color -->
    <div class="mb-3">
        <label class="form-label">Color</label>
        <input type="color" class="form-control form-control-color" value="#563d7c">
    </div>

    <!-- Rango -->
    <div class="mb-3">
        <label class="form-label">Rango</label>
        <input type="range" class="form-range" min="0" max="100">
    </div>

    <!-- Textarea -->
    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <textarea class="form-control" rows="3"></textarea>
    </div>

    <!-- Select -->
    <div class="mb-3">
        <label class="form-label">Selecciona una opción</label>
        <select class="form-select">
            <option selected disabled>-- Selecciona --</option>
            <option value="1">Opción 1</option>
            <option value="2">Opción 2</option>
            <option value="3">Opción 3</option>
        </select>
    </div>

    <!-- Checkbox -->
    <div class="mb-3">
        <label class="form-label d-block">Checkbox</label>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="check1">
            <label class="form-check-label" for="check1">Opción A</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="check2" checked>
            <label class="form-check-label" for="check2">Opción B (seleccionado)</label>
        </div>
    </div>

    <!-- Radio -->
    <div class="mb-3">
        <label class="form-label d-block">Radio</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="radios" id="radio1">
            <label class="form-check-label" for="radio1">Opción 1</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="radios" id="radio2">
            <label class="form-check-label" for="radio2">Opción 2</label>
        </div>
    </div>

    <!-- Input disabled -->
    <div class="mb-3">
        <label class="form-label">Campo Deshabilitado</label>
        <input type="text" class="form-control" placeholder="No editable" disabled>
    </div>

    <!-- Botones -->
    <div class="mb-3">
        <button class="btn btn-primary">Enviar</button>
        <button type="reset" class="btn btn-secondary">Cancelar</button>
    </div>
</form>