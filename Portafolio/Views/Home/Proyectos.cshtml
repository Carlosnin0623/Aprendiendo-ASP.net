@model IEnumerable<Proyecto>

@{
	ViewData["Title"] = "Proyectos";
}


@if (Model != null && Model.Any())
{
	<div class="container">
		<h1>Mis Proyectos</h1>
		<p>Aquí encontrarás los proyectos en los que he trabajado.</p>
	</div>

	<partial name="_ListadoProyectos" model="Model" />
}
else
{
	<div class="text-center" style="padding-top: 6rem; ">
		<h1>Mis Proyectos</h1>
		<p>No hay trabajos pendientes para mostrar</p>
	</div>
}